<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<h1>Client's list</h1>

<table>
  <thead>
    <tr>
      <td>Name</td>
      <%# <td>Email</td> %>
      <%# <td>Phone</td> %>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
