<% if @customer.errors.any? %>
  <% @customer.errors.full_messages.each do |message| %>
    <h1><p><%= message %></p></h1>
  <% end %>
<% end %>

<h1>New client</h1>

<%= form_for @customer do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br />
  <%= f.label :email %>
  <%= f.text_field :email %><br />
  <%= f.label :telephone %>
  <%= f.text_field :telephone %><br />
  <%= f.label :avatar %>
  <%= f.file_field :avatar %><br />
  <%= f.label :smoke %><br />
  <% {'S': 'Yes', 'N': 'No'}.each do |key, value|  %>
    <%= f.radio_button :smoke, key %><%= value %><br />
  <% end %>
  <%= f.submit 'Save' %>
<% end %>
